<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper SYSTEM "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.my.fmall.manage.mapper.SpuSaleAttrMapper">
<resultMap id="spuSaleAttrMap" type="com.my.fmall.bean.SpuSaleAttr" autoMapping="true">
    <id property="id" column="id"></id>

<!--    一对多-->
    <collection property="spuSaleAttrValueList" ofType="com.my.fmall.bean.SpuSaleAttrValue" autoMapping="true">
        <id property="id" column="sale_attr_value_id"></id>
    </collection>
<!--
    多对一：<association>
-->
</resultMap>
    
<!--    List<SpuSaleAttr> selectSpuSaleAttrList(String spuId);-->
    <!--id：方法名称-->
    <!--#,$-->
    <!-- 如果一个参数可以：
        单纯只用mybatis 传入多个参数可以使用数字0,1,2代替传递的参数顺序！

    -->
<select id="selectSpuSaleAttrList" resultMap="spuSaleAttrMap" >
    SELECT
        sa.id,
        sa.spu_id,
        sa.sale_attr_name,
        sa.sale_attr_id,
        sv.id sale_attr_value_id,
        sv.sale_attr_value_name
    FROM
        spu_sale_attr sa
            INNER JOIN spu_sale_attr_value sv ON sa.spu_id = sv.spu_id
            AND sa.sale_attr_id = sv.sale_attr_id
    WHERE
        sa.spu_id =#{spuId}
</select>

</mapper>